{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev",
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/srig",
        },
        {
            "name": "Launch Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:12101/",
            "webRoot": "${workspaceFolder}/srig",
            "preLaunchTask": "sleep",
            "smartStep": true,
            "skipFiles": [
                // "<node_internals>/**",
                "localhost:12101/**",
                "**/node_modules/**"
            ],
            "disableNetworkCache": true,
        },
        {
            "name": "Python: Socket Server",
            "type": "python",
            "request": "launch",
            "program": "pyserver/server.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ],
    "compounds": [
        {
            "name": "Stack",
            "configurations": [
                "Launch Server",
                "Launch Client",
                "Python: Socket Server"
            ],
            "stopAll": true
        }
    ]
}